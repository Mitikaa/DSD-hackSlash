<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="DSD Category"
            id="com.asu.score.haskslash">
      </category>
      <view
            name="DSD Task View"
            icon="icons/sample.gif"
            category="com.asu.score.haskslash"
            class="com.asu.score.haskslash.views.TaskView"
            id="com.asu.score.haskslash.views.TaskView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="com.asu.score.haskslash.views.TaskView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
